    // Create a default Marker and add it to the map.
    const marker1 = new mapboxgl.Marker({color :"red"})
        .setLngLat(listing.geometry.coordinates)
        .setPopup(
          new mapboxgl.Popup({offset:25}).setHTML(
            `<h5>${listing.location}</h5>`
          )
        )
        .addTo(map);
</script>